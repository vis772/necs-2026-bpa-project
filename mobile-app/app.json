{
  "expo": {
    "name": "NECS 2026",
    "slug": "necs-2026-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0f"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.necs2026.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0f"
      },
      "package": "com.necs2026.mobile"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single",
      "name": "NECS 2026",
      "shortName": "NECS",
      "description": "National Esports Championship Series 2026",
      "backgroundColor": "#0a0a0f",
      "themeColor": "#00f0ff"
    },
    "plugins": [
      "expo-asset"
    ]
  }
}
